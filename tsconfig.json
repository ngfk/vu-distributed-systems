{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "target": "es5",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "downlevelIteration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "webpack"
    ]
}
