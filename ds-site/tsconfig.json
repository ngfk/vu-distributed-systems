{
    "compilerOptions": {
        // Basic Options
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "jsx": "react",
        "outDir": "build",

        // Strict Type-Checking Options
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        // Additional Checks
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,

        // Module Resolution Options
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "build", "webpack"]
}
