{
    "name": "vu-distributed-systems",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "homepage" : "https://ngfk.github.io/vu-distributed-systems",
    "scripts": {
        "start": "http-server --port $PORT ds-site/build",
        "watch": "npm run --prefix=ds-site start",
        "postinstall": "npm install --prefix ds-site && npm run build",
        "build": "npm run --prefix ds-site build",
        "commit": "git-cz"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ngfk/vu-distributed-systems.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ngfk/vu-distributed-systems/issues"
    },
    "devDependencies": {
        "commitizen": "^2.9.6",
        "cz-customizable": "^5.2.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "./cz-config.js"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "semi": true,
        "useTabs": false
    },
    "dependencies": {
        "http-server": "^0.10.0"
    }
